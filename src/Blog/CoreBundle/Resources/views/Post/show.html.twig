{% extends "CoreBundle::layout.html.twig" %}
{% block title %}{{ post.title }}{% endblock %}

{% block sidebar %}
    <aside>
        <h3>{{'author' | trans}}</h3>
        
        
            <p>
                <a href="{{path('blog_core_author_show', {slug: post.author.slug} )}}" title="{{'post.by.author' | trans({'%name%': 'post.author.name'}) }}">{{post.author.name}}</a>
            </p> 
        


    </aside>
{% endblock %}

{% block section %}
    
    
    <article class="post">
        <header>
            <h1>{{post.title}}</h1>
            <p>
             {{'post.on' | trans}} <time datetime="{{post.createdAt | date('c')}}"> {{ post.createdAt | date}}</time>   
                
            </p>
        </header>
            
            <p>
                {{post.body | nl2br }} 
            </p>
    </article>
            
            <a id="comments"></a>
            <h2>{{'comment.plural' | trans}}</h2>
            
            {% for comment in post.comments %}
                {{include('CoreBundle:Post:_comment.html.twig', {comment: comment})}}
            {% endfor %}
            
            
            <h4>{{'comment.write' | trans}}:</h4>
            
            {{form(form, { action: path('blog_core_post_createcomment', {slug: post.slug}) ~ '#comments' })}}

{% endblock %}